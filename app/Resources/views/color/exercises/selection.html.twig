{% extends 'color/exercise_base.html.twig' %}

{% set exercise_title = 'Color Selection Exercise' %}

{% block exercise %}
    <div class="exercise"
         data-num-rounds="10"
         data-allow-random-units="false"
         data-random-units="false"
         data-task-types='[
            {
                "name": "ColorSelection",
                "options": {
                    "color_systems": [
                        {{ color_system_strs|join(',') }}
                    ],
                    "show_visualization": false,
                    "visualization_options": {},
                    "max_attempts": 3,
                    "allow_skip_after_first_attempt": true,
                    "num_options": 8
                },
                "weight": 1
            }
         ]'
         {% if experiment_active and app.user is defined and all_available_ex is defined and all_available_ex %}
             data-post-to="{{ path('exercise-complete', {'exercise_name': 'selection'}) }}"
         {% endif %}
    >
    </div>
{% endblock %}