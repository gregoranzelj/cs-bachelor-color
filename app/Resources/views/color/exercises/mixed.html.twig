{% extends 'base.html.twig' %}

{% block title %}Mixed Exercise{% endblock %}

{% block body %}
    <h1>Mixed Exercise</h1>
    <p>
        <b>Color systems:</b>
        {{ color_systems|join(', ') }}
    </p>

    {# TODO: If e.g. user is in exp. group A and this includes HSV/CMY, block the exercise! #}
    {% set color_system_strs = [] %}
    {% for system in color_systems %}
        {% set color_system_strs = color_system_strs|merge(['"%s"'|format(system)]) %}
    {% endfor %}
    <div class="exercise"
         data-num-rounds="10"
         data-task-types='[
            {
                "name": "ColorSelection",
                "options": {
                    "color_systems": [
                        {{ color_system_strs|join(',') }}
                    ],
                    "show_visualization": false,
                    "visualization_options": {},
                    "max_attempts": 3,
                    "allow_skip_after_first_attempt": true,
                    "num_options": 8
                },
                "weight": 1
            },
            {
                "name": "ColorMatching",
                "options": {
                    "color_systems": [
                        {{ color_system_strs|join(',') }}
                    ],
                    "show_visualization": true,
                    "visualization_options": {},
                    "max_attempts": 3,
                    "allow_skip_after_first_attempt": true,
                    "show_current_color": true,
                    "show_target_color": true
                },
                "weight": 1
            },
            {
                "name": "ColorConversionSelection",
                "options": {
                    "color_systems": [
                        {{ color_system_strs|join(',') }}
                    ],
                    "mixed_conversion_systems": false,
                    "show_target_visualization": false,
                    "show_conversion_visualization": false,
                    "show_visualization": false,
                    "visualization_options": {},
                    "max_attempts": 2,
                    "allow_skip_after_first_attempt": true,
                    "num_options": 5
                },
                "weight": 1
            },
            {
                "name": "ColorConversion",
                "options": {
                    "color_systems": [
                        {{ color_system_strs|join(',') }}
                    ],
                    "show_target_visualization": false,
                    "show_conversion_visualization": false,
                    "show_visualization": false,
                    "visualization_options": {},
                    "max_attempts": 3,
                    "allow_skip_after_first_attempt": true,
                    "show_current_color": false,
                    "show_target_color": false
                },
                "weight": 1
            }
         ]'
    >
    </div>
{% endblock %}